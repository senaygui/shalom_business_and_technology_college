                                  </div>
                                  <div class="col-12 form-group">
                                    <%= f.input :password_confirmation, input_html: { class: 'form-control', autocomplete: "password_confirmation" },placeholder: "Password confirmation", required: true %>
                                  </div>
                                  <div class="col-12 my-2">
                                    <%= f.submit "Update Password", class: "btn btn-block btn-primary" %>  
                                  </div>
                                </div>
                                
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      

                    
                  </div>
                </div>
              <%end%>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
    </div>
